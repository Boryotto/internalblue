#!/bin/sh
# Extract bluetoothd entitlements
# This is a godmode.xml entitlement file (no-container, task_for_pid_allow,platfrom-app)
#echo "" | base64 -d > /tmp/godmode.xml
echo "" | base64 -d > /tmp/godmode.xml
#ldid -e /usr/sbin/bluetoothd > /tmp/bluent.xml
# extract arch arm64 of internalblued and replace the multi arch binary
jtool -e arch -arch arm64 /usr/bin/internalblued
mv /usr/bin/internalblued.arch_arm64 /usr/bin/internalblued
# sign internalblued with bluetoothd entitlements
echo "signing"
jtool --sign --ent /tmp/godmode.xml --inplace /usr/bin/internalblued
# Clean up
rm /tmp/godmode.xml
# Load internalblued
launchctl load /Library/LaunchDaemons/com.ttdennis.internalblued.plist
